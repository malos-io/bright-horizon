services:
  backend:
    build:
      context: ./backend
      dockerfile: Dockerfile.dev
    container_name: training-center-api-dev
    restart: unless-stopped
    ports:
      - "8000:8000"
    volumes:
      - ./backend:/app
    environment:
      - PYTHONDONTWRITEBYTECODE=1
      - PYTHONUNBUFFERED=1
    networks:
      - training-network-dev

  frontend-public:
    build:
      context: ./frontend-public
      dockerfile: Dockerfile.dev
    container_name: training-center-public-dev
    restart: unless-stopped
    ports:
      - "5173:5173"
    volumes:
      - ./frontend-public:/app
      - /app/node_modules
    environment:
      - CHOKIDAR_USEPOLLING=true
      - WATCHPACK_POLLING=true
      - VITE_API_PROXY_TARGET=http://backend:8000
    depends_on:
      - backend
    networks:
      - training-network-dev

  frontend-admin:
    build:
      context: ./frontend-admin
      dockerfile: Dockerfile.dev
    container_name: training-center-admin-dev
    restart: unless-stopped
    ports:
      - "5174:5174"
    volumes:
      - ./frontend-admin:/app
      - /app/node_modules
    environment:
      - CHOKIDAR_USEPOLLING=true
      - WATCHPACK_POLLING=true
      - VITE_API_PROXY_TARGET=http://backend:8000
    depends_on:
      - backend
    networks:
      - training-network-dev

  frontend-student:
    build:
      context: ./frontend-student
      dockerfile: Dockerfile.dev
    container_name: training-center-student-dev
    restart: unless-stopped
    ports:
      - "5175:5175"
    volumes:
      - ./frontend-student:/app
      - /app/node_modules
    environment:
      - CHOKIDAR_USEPOLLING=true
      - WATCHPACK_POLLING=true
    depends_on:
      - backend
    networks:
      - training-network-dev

networks:
  training-network-dev:
    driver: bridge
